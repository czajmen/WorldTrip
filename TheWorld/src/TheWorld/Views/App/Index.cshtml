@model IEnumerable<TheWorld.Models.Models.Trip>

@{
    ViewBag.Title = "Strona Domowa";
}

 <div class="row">
     <div class="col-md-6 col-xs-4">
         <h1>Świat!</h1>
         <p>W budowie!</p>

         <form>
             <div class="form-group">
                 <label>Data</label>
                 <input  class="form-control"/>
             </div>
             <div class="form-group">
                 <label>Lokalizacja</label>
                 <input class="form-control" />
             </div>
             <div> <input type="submit" value="Dodaj" class="btn btn-success"></div>
         </form>
     </div>

     <div class="col-md-6">
         <h2>Mapa</h2>

         <ul>
             @foreach (var item in Model)
             {
                 <li>@item.Name</li>
             }

         </ul>
      

     </div>
</div>