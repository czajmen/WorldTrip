@{
    ViewBag.Title = "Strona Domowa";
}




<!DOCTYPE html>

<html lang="pl" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Świat! - @ViewBag.Title</title>

    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div id="sidebar">
        <img src="~/img/1467031011117.jpg" alt="headshot" class="headshot" />
        <span id="username">Kamil Czaja</span>

        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index" >Home</a></li>
            <li><a asp-controller="App" asp-action="About" >O stronie</a></li>
            <li><a asp-controller="App" asp-action="Contact" >Kontakt</a></li>
        </ul>

    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sideBarToggle">Ukryj Menu</button>
            </div>

            @RenderBody()

        </div>

        <div id="footer">
            &copy; 2016 Kamil Czaja.
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", false);

    <script type="text/javascript" src="~/js/site.js"></script>

</body>
</html>